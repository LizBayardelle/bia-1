<div class="media">
  <div class="media-body">
    <small>
      <%= comment.user.first_name %> commented <%= time_ago_in_words(comment.created_at) %> ago
    </small>
    <p><%= comment.body %></p>

    <% if current_user.admin? %>
      <%= link_to 'Delete Comment', [@post, comment], method: :delete %>
    <% end %>
  </div>
</div>
